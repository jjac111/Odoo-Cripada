<odoo>
    <data>

        <record id="helpdesk_ticket_view_form_new" model="ir.ui.view">
            <field name="name">helpdesk.ticket.form.new</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="arch" type="xml">

                

                <xpath expr="//form[1]/sheet[1]/div[not(@name)][1]/h1[1]/field[@name='name']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
				
				<xpath expr="//field[@name='ticket_type_id']" position="after">
                    <field name="x_studio_ticket_asociado" widget="selection"/>
                </xpath>

            </field>
        </record>

        <record id="purchase_order_form_new" model="ir.ui.view">
            <field name="name">purchase.order.form.new</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_ref']" position="before">
                    <field name="partner_ref_new" widget="selection"/>
                </xpath>
				
				<xpath expr="//field[@name='company_id']" position="after">
                    <field name="x_studio_cliente_final" widget="many2one"/>
                </xpath>

                <xpath expr="//field[@name='partner_ref']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>
		
		<record id="stock_picking_form_new" model="ir.ui.view">
            <field name="name">stock.picking.form.new</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='owner_id']" position="after">
                    <field name="x_studio_cliente_final" attrs="{'invisible':[('x_studio_cliente_final', '=', False)]}" widget="many2one"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>